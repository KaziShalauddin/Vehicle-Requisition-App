@model VehicleManagementApp.ViewModels.DepartmentViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<link href="~/css/ssss.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Department Description</h1>
            <div class="jumbotron">
                <table class="details_view">
                    <tr>
                        <td class="title_name">Department Name :</td>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>

                    <tr>
                        <td class="title_name"><b>Organaization Name :</b></td>
                        <td>@Html.DisplayFor(model => model.Organaization.Name)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
