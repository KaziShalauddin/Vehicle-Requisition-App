@model VehicleManagementApp.ViewModels.CommentViewModel

<div class="row">
    <div class="col-md-12">
        <div>
            @using (Ajax.BeginForm("CreateComment", "Driver", null, new AjaxOptions {HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "commentListReplace", OnComplete = "handeCommentAddedComplete" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m=> m.RequsitionId)
                @Html.HiddenFor(m=>m.EmployeeId)
                @Html.HiddenFor(m=>m.EmployeName)
                @Html.HiddenFor(m=>m.SenderEmployeeId)
                <div class="form-group">
                    @Html.LabelFor(model => model.ReceiverEmployeeId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.ReceiverEmployeeId,new SelectList(Model.ReceiverEmployees, "Id", "Name"), "Select Receiver", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ReceiverEmployeeId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Comment</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Comments, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.Comments, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <br/>
                        <input type="submit" value="Post Comment" class="btn btn-default"/>
                    </div>
                </div>
            }
        </div>

    </div>
</div>