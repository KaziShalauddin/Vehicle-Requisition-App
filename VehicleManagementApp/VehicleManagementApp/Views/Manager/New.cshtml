@model IEnumerable<VehicleManagementApp.ViewModels.RequsitionViewModel>

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    int sl = 1;
}

<h2 style="padding-bottom: 30px; text-align: center">New Requisition</h2>

<table class="table table-bordered table-striped" id="myTable">
    <thead>
    <tr>
        <th>@Html.Raw("SL")</th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th>
            @Html.DisplayName("From")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.To)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequsitionNumber)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(sl++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Form)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.To)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequsitionNumber)
                </td>
                <td>
                    @Html.ActionLink("View", "Details","Requsition", new {id = item.Id}, new {@class="btn btn-default"})
                    @Html.ActionLink("Hold", "Hole", new {id = item.Id}, new {@class="btn btn-primary", onclick = "return confirm('Are You Sure? You Want To Hold This')" })
                    @Html.ActionLink("Cancle", "Cancle", new { id = item.Id }, new { @class = "btn btn-info", onclick = "return confirm('Are You Sure? You Want To Cancle This !!')" })
                </td>
            </tr>
        }
    </tbody>
</table>
