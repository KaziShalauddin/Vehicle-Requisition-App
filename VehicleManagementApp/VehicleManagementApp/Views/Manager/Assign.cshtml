@using VehicleManagementApp.Models.Models
@model VehicleManagementApp.ViewModels.ManagerViewModel

@{
    ViewBag.Title = "Assign Requisition";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    var vehicles = ViewBag.Vehicles;
    

}

<h2 style="padding-bottom: 30px; text-align: center">Assign Requisition</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.RequsitionId, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.HiddenFor(model => model.RequsitionId, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.RequsitionId, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VehicleId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (vehicles != null)
                {
                    @Html.DropDownListFor(model => model.VehicleId, (SelectList) vehicles, "Select Car", new {@class = "form-control"})
                }
                else
                {
                    @Html.Raw("No vehicle available now!")
                }
                @Html.ValidationMessageFor(model => model.VehicleId, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeId, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(model=>model.EmployeeId, new SelectList(Model.Employees,"Id", "Name") , "Select Driver", new {@class = "form-control", id="employeeDD"})
                @Html.ValidationMessageFor(model => model.EmployeeId, "", new {@class = "text-danger"})
            </div>
        </div>

