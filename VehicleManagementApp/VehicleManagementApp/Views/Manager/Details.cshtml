        <tr>

            <td style="padding-top: 20px"></td>
            @*<td>@Html.ActionLink("Assign", "id=assign_Confirm", new {id = "Id"}, new {@class = "btn btn-info btn-lg"})</td>*@
            <td style="padding-top: 20px"></td>
        </tr>

    </table>
    <ul>
        <li>
            @Html.ActionLink("Back to List", "CompleteRequsition", null, new { @class = "btn btn-default", @style = "float: left" })
        </li>
    </ul>

</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#assign_Confirm").click(function () {
                $("#assign_Confirm").show();
                $("#assign_Confirm").hide();

            });
        });
    </script>
}
