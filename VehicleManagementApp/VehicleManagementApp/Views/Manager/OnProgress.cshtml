@model IEnumerable<VehicleManagementApp.ViewModels.RequsitionViewModel>

@{
    ViewBag.Title = "OnProgress";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    int sl = 1;
}

<h2 style="padding-bottom: 30px; text-align: center">On Progress</h2>



<table class="table table-bordered table-striped" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.Raw("SL")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Form)
            </th>
            <th>
                @Html.Raw("To")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JourneyStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JouneyEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(sl++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Form)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.To)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JourneyStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JouneyEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Name)
                </td>
                <td>
                    @Html.ActionLink("Assign", "Assign", new {id = item.Id}, new {@class = "btn btn-info btn-sm"})
                    @Html.ActionLink("Details", "Details", new {id = item.Id}, new {@class = "btn btn-primary btn-sm"})
                </td>
            </tr>
        }
    </tbody>
</table>
